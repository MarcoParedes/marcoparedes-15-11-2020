
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container mt-4 mb-4">
    <h2>Index</h2>

    <div class="row">
        <div class="col-md-4">
            <select id="albums" class="form-control form-control-sm">
            </select>
        </div>
        <div class="col-md-4">
            <button class="btn btn-sm btn-info" type="button" id="btnPhotos">Visualizar Álbum</button>
        </div>
    </div>

    <div class="row mt-3 mb-3">
        <div class="col-12" id="photos">
            <div class="loading">
                <img src="~/Assets/images/loading.gif" alt="Loading..." />
            </div>
            <div class="content">

            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12" id="comments">
            <div class="loading">
                <img src="~/Assets/images/loading.gif" alt="Loading..." />
            </div>
            <div class="content">

            </div>
        </div>
    </div>

</div>

@section scripts {

    <script>

        $('#photos .loading').hide();
        $('#comments .loading').hide();

        $.ajax({
            type: 'get',
            url: '/Home/GetAlbums',
            dataType: 'json',
            success: function (albums) {
                var options = '';
                for (var item of albums) {
                    options += '<option value="' + item.Id + '">' + item.Title + '</option>';
                }

                $('#albums').html(options);
            }
        });

        $('#btnPhotos').click(function () {
            var albumId = $('#albums').val();
            $.ajax({
                type: 'get',
                url: '/Home/GetPhotos/' + albumId,
                beforeSend: function () {
                    $('#photos .content').hide();
                    $('#photos .loading').show();
                },
                complete: function () {
                    $('#photos .content').show();
                    $('#photos .loading').hide();
                },
                dataType: 'html',
                success: function (photos) {
                    $('#photos .content').html(photos);
                }
            });
        });

        $(document).on('click', function (e) {
            if ($(e.target).hasClass('btn-comments')) {
                console.log($(e.target));
                var id = $(e.target).attr('data-id');
                console.log(id);
                $.ajax({
                    type: 'get',
                    url: '/Home/GetComments/' + id,
                    beforeSend: function () {
                        $('#comments .content').hide();
                        $('#comments .loading').show();
                    },
                    complete: function () {
                        $('#comments .content').show();
                        $('#comments .loading').hide();
                    },
                    dataType: 'html',
                    success: function (photos) {
                        $('#comments .content').html(photos);
                    }
                });
            }
        });

    </script>
}
